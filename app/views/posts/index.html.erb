<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <br />
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Posts</h1>
    <% if user_signed_in? %>
      <%= link_to 'New post', new_post_path,
      class: "rounded-lg py-3 px-4 bg-blue-600
      text-white block font-medium" %>
    <% end %>
  </div>
  <br />
  <div id="posts" class="min-w-full">
    <% @posts.each do |post| %>
    <div class="row mt-4 clearfix">
      <div class="col-8 col-sm-8 col-md-9 col-lg-9">
        <h5 class="mt-0 mb-1">
          <a href="/posts/<%= post.id %>",
          class="nav-link"><%= post.name %></a>
        </h5>
      <strong class="block 1font-medium mb-1">
        <h5 class="mt-0 mb-1">
          <a href="/posts/<%= post.id %>",
          class="nav-link"><%= post.title %></a>
        </h5>
      </strong>
        <%= truncate(strip_tags(post.body.to_s), length:180) %>
      </div>
      <div style="margin-top:20px; margin-bottom:20px;" class="col-4 col-sm-4 col-md-3 col-lg-3 clearfix">
        <% if post.image.attached? %>
          <%= link_to image_tag(post.image,
          style:"width:270px; heigh:auto"), post.image %>
        <% end %>
      </div>
    </div>
    <br /><hr /><br />
    <% end %>
    <br />
  </div>
</div>
